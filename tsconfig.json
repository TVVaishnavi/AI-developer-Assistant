{
    "compilerOptions": {
      "target": "es2016",                                  
      "module": "CommonJS",                                
      "esModuleInterop": true,                             
      "forceConsistentCasingInFileNames": true,           
      "strict": true,                                     
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
      "resolveJsonModule": true,
      "lib": ["ESNext"],
      "moduleResolution": "node" 
    }                       
}